<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pixel.demo.coordinatorlayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".test.BottomSheetBehaviorActivity"
            android:label="@string/title_activity_bottom_sheet_behavior"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".test.SwipeDismissBehaviorActivity" />
        <activity android:name=".test.FloatingActionButtonActivity" />
        <activity
            android:name=".test.ViewOffsetBehaviorActivity"
            android:label="@string/title_activity_view_offset_behavior"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test.MoveViewActivity"
            android:label="@string/title_activity_move_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test.AylsonHomeActivity"
            android:label="@string/title_activity_aylson_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test.ResumeActivity"
            android:label="@string/title_activity_resume"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test.CoorAndDrawerActivity"
            android:label="@string/title_activity_coor_and_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".test.OneTestActivity"
            android:label="@string/title_activity_one_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".test.NestedRefreshActivity"></activity>
    </application>

</manifest>